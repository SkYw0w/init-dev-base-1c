{
  "name": "init-dev-base-1c",
  "displayName": "init_dev_base_1C",
  "description": "Создание информационной базы 1С из текущего Git проекта",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "initDevBase1c",
          "title": "Init Dev Base 1C",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "initDevBase1c": [
        {
          "id": "initDevBase1c.view",
          "name": "Init Dev Base",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Init Dev Base 1C",
      "properties": {
        "initDevBase1c.basesPath": {
          "type": "string",
          "default": "C:\\info_bases",
          "description": "Путь к каталогу с информационными базами"
        },
        "initDevBase1c.srcCf": {
          "type": "string",
          "default": "src\\cf",
          "description": "Путь к конфигурации 1С внутри проекта"
        },
        "initDevBase1c.v8version": {
          "type": "string",
          "default": "8.3.24.1667",
          "description": "Версия платформы 1С для vrunner"
        },
        "initDevBase1c.extensionPath": {
          "type": "string",
          "default": "C:\\git\\src\\cfe",
          "description": "Путь к расширению для подключения к ИБ"
        }
      }
    },
    "commands": [
      {
        "command": "init-dev-base-1c.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "init-dev-base-1c.createBase",
        "title": "1C: Создать ИБ из текущей ветки проекта"
      },
      {
        "command": "init-dev-base-1c.connectExtension",
        "title": "1C: Подключить расширение к ИБ текущей ветки"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "publisher": "skywow",
  "repository": {
    "type": "git",
    "url": "https://github.com/SkYw0w/init-dev-base-1c"
  },
  "homepage": "https://github.com/SkYw0w/init-dev-base-1c/blob/master/README.md"
}
